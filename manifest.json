{
  "manifest_version": 2,
  "name": "AutoConnect",
  "version": "1",

  "description": "Ajoute un boutton qui te connecte automatiquement",
  "homepage_url" : "https://github.com/Pythacode/AutoConnectMonEntOccitanie",

  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
      "default_title": "AutoConnect Mon Ent Occitanie"
  },

  "icons": {
    "48": "img/logo-48.png"
  },

  "content_scripts": [
    {
      "matches": ["https://*.mon-ent-occitanie.fr/*", "https://*.education.gouv.fr/*"],
      "js": ["js/main.js"]
    }
  ],

  "permissions": [
    "storage"
  ],
  
  "applications": {
    "gecko": {
      "id": "AutoConnect@edu-nonofficel.fr"
    }
  },

  "options_ui": {
    "page": "config/config.html", 
    "open_in_tab": true
  }
}